{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                // Compiler Flags
                //"Od", // Disable Debug
                "/Zi",
                "/EHsc",
                "/std:c++latest",
                "/Fd:",
                "${workspaceFolder}\\bin\\",
                "/Fo:",
                "${workspaceFolder}\\bin\\",
                "/Fe:",
                "${workspaceFolder}\\bin\\main.exe",

                // Source
                "src\\2-Core\\*.cpp",
                "src\\1-Inbound\\*.cpp",

                // Linker Flags
                "/link"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}